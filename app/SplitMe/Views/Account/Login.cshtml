@model SplitMe.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}

@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { id = "targetform", @class = "form-horizontal" }))
{
   
        <div class="row">
        <h2>Use this form to enter your user name and password.</h2>
        </div>
        @Html.ValidationSummary(true, "Log in was unsuccessful. Please correct the errors and try again.")

        <div class="row">
            <div class="span3">&nbsp;</div>
                <div class="span8">

                <div class="control-group">
                    <label class="control-label" for="username">
                        User Id: </label>
                    <div class="controls">
                        @Html.TextBoxFor(m => m.UserName)
                    </div>
                    </div>
            </div>
         </div>
         <div class="row">
            <div class="span3">&nbsp;</div>
                <div class="span8">

                <div class="control-group">
                    <label class="control-label" for="password">
                        Password: </label>
                    <div class="controls">
                        @Html.PasswordFor(m => m.Password)
                    </div>
                    </div>
            </div>
         </div>

         @*<div class="row">
            <div class="span3">&nbsp;</div>
                <div class="span8">

                <div class="control-group">
                    <label class="control-label" for="remember">
                        Remember me: </label>
                    <div class="controls">
                        @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox" })
                    </div>
                    </div>
            </div>
         </div>*@

         <div class="row">
            <div class="span12 well centered">
                @*<input type="submit" value="Log in" />*@
			    <a class="btn btn-primary" href="#"  onclick="$('#targetform').submit();">Log in</a>
            </div>
        </div>

        
    
}

